<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true"> <!-- pressed -->
    <shape  android:shape="rectangle"> 
    <!-- 填充的颜色 --> 
    <solid android:color="#FF9966" />
    <!-- 设置按钮的四个角为弧形 --> 
    <!-- android:radius 弧形的半径 --> 
    <corners android:radius="6dip" /> 
      
<!-- padding：Button里面的文字与Button边界的间隔 --> 
	<padding 
   android:left="5dp"
   android:top="5dp"
   android:right="5dp"
   android:bottom="5dp" 
	/> 
	</shape>
   </item> 
    <item > <!-- default -->
        <shape  android:shape="rectangle"> 
    <!-- 填充的颜色 --> 
      <solid android:color="#E46544" /> 
    <!-- 设置按钮的四个角为弧形 --> 
    <!-- android:radius 弧形的半径 --> 
    <corners android:radius="6dip" /> 
      
<!-- padding：Button里面的文字与Button边界的间隔 --> 
	<padding 
   android:left="5dp"
   android:top="5dp"
   android:right="5dp"
   android:bottom="5dp" 
	/> 
	</shape>
    </item>
</selector>