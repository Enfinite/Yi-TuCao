<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:background="@color/pagetabstrip_background"
    android:orientation="vertical"
    >
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:background="@color/pagetabstrip_background"
    android:orientation="vertical"
    >
    
    <EditText android:id="@+id/userName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:singleLine="true"
        android:padding="5dp"
        android:hint="@string/enter_email"
        android:inputType="textEmailAddress"
        android:background="@drawable/shape_edit_text"
        />
    <EditText android:id="@+id/userPassword"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:singleLine="true"
        android:padding="5dp"
        android:hint="@string/enter_password"
        android:inputType="textPassword"
        android:background="@drawable/shape_edit_text"
        />
    <Button android:id="@+id/login"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="@string/string_login"
        android:textColor="@color/text_color_white"
        android:background="@drawable/login_button_selector"
        android:textStyle="bold"
        android:textSize="18sp"
        />
   
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">
        <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="1dp"
        android:layout_gravity="center_vertical"
        android:background="@color/divider" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:gravity="center"
            android:padding="5dp"
            android:layout_gravity="center_vertical"
            android:text="@string/string_or"
            android:textSize="18sp"
            android:textColor="@color/divider" />

         <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="1dp"
        android:layout_gravity="center_vertical"
        android:background="@color/divider" />
     </LinearLayout>
     <!-- 新浪微博登陆 -->
     <RelativeLayout
          android:id="@+id/login_with_weibo"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginLeft="15dp"
         android:layout_marginRight="15dp"
         android:layout_marginTop="20dp"
         android:clickable="true"
         android:background="@drawable/weibo_login_linearlayout_background"
         android:orientation="horizontal" >

         <TextView
             android:id="@+id/text1"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerInParent="true"
             android:layout_gravity="center"
             android:text="@string/string_weibo_login"
             android:textColor="@color/text_color_white"
             android:textSize="18sp"
             android:duplicateParentState="true"
             android:textStyle="bold" />

         <ImageView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentTop="true"
             android:layout_marginLeft="20dp"
             android:gravity="center"
             android:padding="5dp"
             android:duplicateParentState="true"
             android:src="@drawable/sina" />
     </RelativeLayout>
     <!-- QQ登陆 -->
     <RelativeLayout
         android:id="@+id/login_with_qq"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginLeft="15dp"
         android:layout_marginRight="15dp"
         android:layout_marginTop="20dp"
         android:clickable="true"
         android:background="@drawable/qq_login_linearlayout_background"
         android:orientation="horizontal" >

         <TextView
             android:id="@+id/text2"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerInParent="true"
             android:layout_gravity="center"
             android:text="@string/string_qq_login"
             android:textColor="@color/text_color_white"
             android:textSize="18sp"
             android:duplicateParentState="true"
             android:textStyle="bold" />

        <ImageView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentTop="true"
             android:layout_marginLeft="20dp"
             android:gravity="center"
             android:padding="5dp"
             android:duplicateParentState="true"
             android:src="@drawable/qq" />

     </RelativeLayout>
   

