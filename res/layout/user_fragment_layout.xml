    <TableLayout android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:padding="10dip"
        android:background="#495162">
    	<TableRow android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_table_row"
        android:padding="10dp" 
        >
        <ListView android:id="@+id/slidemenu_list1" 
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            />
    	</TableRow>
    
    	<TableRow android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_table_row"
        android:padding="10dp"
        android:layout_marginTop="10dp">
        	<ListView android:id="@+id/slidemenu_list2"
        	android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
        	    />
     	</TableRow>"
        
    	<TableRow android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_table_row"
        android:padding="10dp"
        android:layout_marginTop="10dp">
        	<ListView android:id="@+id/slidemenu_list3"
        	 android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
        	    />
    	</TableRow>  
    </TableLayout>                                              
</LinearLayout>